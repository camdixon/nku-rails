source 'https://rubygems.org'

ruby "2.0.0"

gem 'rails', '4.0.2'

# Use SCSS for stylesheets
gem 'sass-rails', '~> 4.0.0'
gem 'jquery-rails'
gem 'bootstrap-sass'
gem 'puma'
gem 'bcrypt-ruby'

group :development, :test do
  gem 'byebug'
  gem 'sqlite3'
end

group :test do
  gem 'rspec-rails'
  gem 'capybara'
  gem 'factory_girl_rails'
end

group :production do
  gem 'rails_12factor'
  gem 'pg'
  gem 'uglifier'
end
