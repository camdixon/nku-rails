<div class="page-header">
  <h1>Attendances</h1>
</div>

<table class="table">
  <thead>
    <tr>
      <th>Name</th>
      <th>Attendance Date</th>
      <th>Seat</th>
    </tr>
  </thead>

  <tbody>
    <% @attendances.each do |attendance| %>
      <tr id="<%= dom_id(attendance) %>">
        <td><%= link_to attendance.student.name, student_attendances_path(attendance.student) %></td>
        <td><%= attendance.attended_on %></td>
        <td><%= attendance.seat %></td>
      </tr>
    <% end %>
  </tbody>
</table>

