<!DOCTYPE html>
<html>
<head>
  <title>NkuRails</title>
  <%= stylesheet_link_tag    "application", media: "all" %>
  <%= javascript_include_tag "application" %>
  <%= csrf_meta_tags %>
</head>
<body>

<div class="container">
  <% flash.each do |key, value| %>
    <div class="<%= flash_class(key) %> push--top">
      <%= value %>
    </div>
  <% end %>

  <%= yield %>
</div>

</body>
</html>
