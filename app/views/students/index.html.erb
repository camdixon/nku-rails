<div class="page-header">
  <h1>Students</h1>
</div>

<table>
  <tbody>
    <tr>
      <%= render partial: 'seat', locals: {seat: 1} %>
      <%= render partial: 'seat', locals: {seat: 2} %>
    </tr>
    <tr>
      <%= render partial: 'seat', locals: {seat: 3} %>
      <%= render partial: 'seat', locals: {seat: 4} %>
    </tr>
  </tbody>
</table>

<div id="absent-students">
  <h3>Absent Students</h3>
  <% @students.absent.each do |student| %>
    <div id="<%=dom_id(student)%>" class="list-item">
      <div class="avatar pull-left" style='background-image: url(<%= student.avatar %>)'></div>

      <div class="info-block">
        <h4><%= student.name %></h4>
        <p><em>(<%= student.nickname %>)</em></p>
        <p><%= student.email %></p>
      </div>
    </div>
  <% end %>
</div>
