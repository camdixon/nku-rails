<div class="page-header">
  <div class="row">
    <h1 class="col-sm-8">Students
    </h1>
    <div class="col-sm-4">
      <%= link_to 'Create a new student', new_student_path, class: 'btn btn-default pull-right' %>
    </div>
  </div>
</div>


<% @students.each do |student| %>
  <div id="<%=dom_id(student)%>" class="list-item">
    <div class="avatar pull-left" style='background-image: url(<%= student.image_url %>)'></div>

    <div class="info-block">
      <h4><%= link_to student.name, edit_student_path(student) %></h4>
      <p><em>(<%= student.phonetic_name %>)</em></p>
      <p><%= student.email %></p>
    </div>
  </div>
<% end %>
